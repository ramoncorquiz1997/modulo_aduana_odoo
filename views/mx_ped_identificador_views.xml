<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="mx_ped_identificador_view_list" model="ir.ui.view">
      <field name="name">mx.ped.identificador.list</field>
      <field name="model">mx.ped.identificador</field>
      <field name="arch" type="xml">
        <list>
          <field name="code"/>
          <field name="name"/>
          <field name="nivel"/>
          <field name="req_comp1"/>
          <field name="req_comp2"/>
          <field name="req_comp3"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="mx_ped_identificador_view_form" model="ir.ui.view">
      <field name="name">mx.ped.identificador.form</field>
      <field name="model">mx.ped.identificador</field>
      <field name="arch" type="xml">
        <form string="Identificador">
          <sheet>
            <group>
              <group>
                <field name="code"/>
                <field name="name"/>
                <field name="nivel"/>
                <field name="active"/>
              </group>
              <group string="Reglas de complementos">
                <field name="req_comp1"/>
                <field name="req_comp2"/>
                <field name="req_comp3"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="mx_ped_identificador_action" model="ir.actions.act_window">
      <field name="name">Identificadores</field>
      <field name="res_model">mx.ped.identificador</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="mx_ped_identificador_menu"
              name="Identificadores"
              parent="menu_mx_ped_catalogos"
              action="mx_ped_identificador_action"
              sequence="45"/>

  </data>
</odoo>
