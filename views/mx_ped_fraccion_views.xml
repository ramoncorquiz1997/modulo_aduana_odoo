<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mx_ped_fraccion_search" model="ir.ui.view">
        <field name="name">mx.ped.fraccion.search</field>
        <field name="model">mx.ped.fraccion</field>
        <field name="arch" type="xml">
            <search string="Buscar fracciones">
                <field name="code"/>
                <field name="fraccion_anterior"/>
                <field name="name"/>
                <filter string="Con NOM" name="nom_aplica" domain="[('nom_aplica', '=', True)]"/>
                <filter string="Con Permisos" name="permiso_aplica" domain="[('permiso_aplica', '=', True)]"/>
                <filter string="Con RRNA" name="rrna_aplica" domain="[('rrna_aplica', '=', True)]"/>
                <filter string="Precios estimados" name="precio_estimado_aplica" domain="[('precio_estimado_aplica', '=', True)]"/>
                <filter string="Padron sectorial" name="padron_sectorial_aplica" domain="[('padron_sectorial_aplica', '=', True)]"/>
                <filter string="Prohibidas" name="prohibida" domain="[('prohibida', '=', True)]"/>
                <filter string="Vulnerables" name="vulnerable" domain="[('vulnerable', '=', True)]"/>
                <filter string="TLC" name="tlc_aplica" domain="[('tlc_aplica', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="view_mx_ped_um_list" model="ir.ui.view">
        <field name="name">mx.ped.um.list</field>
        <field name="model">mx.ped.um</field>
        <field name="arch" type="xml">
            <list string="Unidades de medida">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mx_ped_um_form" model="ir.ui.view">
        <field name="name">mx.ped.um.form</field>
        <field name="model">mx.ped.um</field>
        <field name="arch" type="xml">
            <form string="Unidad de medida">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mx_ped_um" model="ir.actions.act_window">
        <field name="name">Unidades de medida</field>
        <field name="res_model">mx.ped.um</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_mx_ped_fraccion_list" model="ir.ui.view">
        <field name="name">mx.ped.fraccion.list</field>
        <field name="model">mx.ped.fraccion</field>
        <field name="arch" type="xml">
            <list string="Fracciones arancelarias" default_order="code">
                <field name="code"/>
                <field name="fraccion_anterior" optional="hide"/>
                <field name="nico"/>
                <field name="name"/>
                <field name="um_id"/>
                <field name="igi_importacion_general" optional="hide"/>
                <field name="iva_importacion_general" optional="hide"/>
                <field name="nom_aplica" optional="hide"/>
                <field name="permiso_aplica" optional="hide"/>
                <field name="precio_estimado_aplica" optional="hide"/>
                <field name="prohibida" optional="hide"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mx_ped_fraccion_form" model="ir.ui.view">
        <field name="name">mx.ped.fraccion.form</field>
        <field name="model">mx.ped.fraccion</field>
        <field name="arch" type="xml">
            <form string="Fraccion arancelaria">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="fraccion_anterior"/>
                            <field name="nico"/>
                            <field name="um_id"/>
                            <field name="measure_code"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="seccion"/>
                            <field name="capitulo"/>
                            <field name="partida"/>
                            <field name="subpartida"/>
                        </group>
                    </group>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Tarifa importacion">
                            <group col="2">
                                <group string="Perfil fiscal">
                                    <field name="igi_importacion_general" readonly="1"/>
                                    <field name="iva_importacion_general" readonly="1"/>
                                    <field name="ieps_importacion_general" readonly="1"/>
                                    <field name="cuota_especial"/>
                                    <field name="cuota_um"/>
                                    <field name="import_note" readonly="1"/>
                                </group>
                                <group string="Semaforos">
                                    <field name="nom_aplica" readonly="1"/>
                                    <field name="permiso_aplica" readonly="1"/>
                                    <field name="rrna_aplica" readonly="1"/>
                                    <field name="precio_estimado_aplica"/>
                                    <field name="padron_sectorial_aplica"/>
                                    <field name="avisos_automaticos_aplica"/>
                                    <field name="prohibida"/>
                                    <field name="vulnerable"/>
                                </group>
                            </group>
                            <group col="2">
                                <group string="Tratados y anexos">
                                    <field name="tlc_aplica"/>
                                    <field name="aladi_aplica"/>
                                    <field name="aap_aplica"/>
                                    <field name="anexo_21_aplica"/>
                                    <field name="anexo_23_aplica"/>
                                    <field name="anexo_24_aplica"/>
                                    <field name="anexo_29_aplica"/>
                                    <field name="anexo_30_aplica"/>
                                </group>
                                <group string="Notas y correlaciones">
                                    <field name="descripcion_especifica"/>
                                    <field name="nota_especial"/>
                                    <field name="decretos_text"/>
                                    <field name="historico_text"/>
                                    <field name="tlc_notes"/>
                                    <field name="correlation_tigie"/>
                                    <field name="correlation_tlc"/>
                                    <field name="note_aladi"/>
                                    <field name="note_annexes"/>
                                </group>
                            </group>
                        </page>
                        <page string="Tasas">
                            <field name="tasa_ids" context="{'default_fraccion_id': id}">
                                <list editable="bottom">
                                    <field name="tipo_operacion"/>
                                    <field name="territorio"/>
                                    <field name="igi"/>
                                    <field name="iva"/>
                                    <field name="ieps"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                        <page string="Regulatorio">
                            <group>
                                <group>
                                    <field name="requires_labeling_default"/>
                                    <field name="sector_padron_code" invisible="not padron_sectorial_aplica"/>
                                    <field name="decreto_aplica"/>
                                    <field name="nom_default_ids" widget="many2many_tags"/>
                                    <field name="permiso_default_ids" widget="many2many_tags"/>
                                    <field name="rrna_default_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                            <group string="NICO sugeridos por fraccion">
                                <field name="nico_ids" context="{'default_fraccion_id': id}">
                                    <list editable="bottom">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="active"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mx_ped_fraccion" model="ir.actions.act_window">
        <field name="name">Fracciones arancelarias</field>
        <field name="res_model">mx.ped.fraccion</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_mx_ped_fraccion_search"/>
    </record>

    <record id="action_mx_ped_tarifa_importacion" model="ir.actions.act_window">
        <field name="name">Tarifa de importacion</field>
        <field name="res_model">mx.ped.fraccion</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_mx_ped_fraccion_search"/>
    </record>

    <record id="view_mx_ped_fraccion_tasa_list" model="ir.ui.view">
        <field name="name">mx.ped.fraccion.tasa.list</field>
        <field name="model">mx.ped.fraccion.tasa</field>
        <field name="arch" type="xml">
            <list string="Tasas por fraccion">
                <field name="fraccion_id"/>
                <field name="tipo_operacion"/>
                <field name="territorio"/>
                <field name="igi"/>
                <field name="iva"/>
                <field name="ieps"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <record id="view_mx_ped_fraccion_tasa_form" model="ir.ui.view">
        <field name="name">mx.ped.fraccion.tasa.form</field>
        <field name="model">mx.ped.fraccion.tasa</field>
        <field name="arch" type="xml">
            <form string="Tasa por fraccion">
                <sheet>
                    <group>
                        <field name="fraccion_id"/>
                        <field name="tipo_operacion"/>
                        <field name="territorio"/>
                        <field name="igi"/>
                        <field name="iva"/>
                        <field name="ieps"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mx_ped_fraccion_tasa" model="ir.actions.act_window">
        <field name="name">Tasas por fraccion</field>
        <field name="res_model">mx.ped.fraccion.tasa</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_mx_ped_fraccion"
              name="Fracciones arancelarias"
              parent="menu_mx_ped_catalogos"
              action="action_mx_ped_fraccion"
              sequence="20"/>

    <menuitem id="menu_mx_ped_tarifa_importacion"
              name="Tarifa de importacion"
              parent="menu_mx_ped_catalogos"
              action="action_mx_ped_tarifa_importacion"
              sequence="25"/>

    <menuitem id="menu_mx_ped_um"
              name="Unidades de medida"
              parent="menu_mx_ped_catalogos"
              action="action_mx_ped_um"
              sequence="30"/>

    <menuitem id="menu_mx_ped_fraccion_tasa"
              name="Tasas de fraccion"
              parent="menu_mx_ped_catalogos"
              action="action_mx_ped_fraccion_tasa"
              sequence="40"/>

</odoo>
