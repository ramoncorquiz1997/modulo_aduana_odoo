    <record id="view_mx_nom_list" model="ir.ui.view">
      <field name="name">mx.nom.list</field>
      <field name="model">mx.nom</field>
      <field name="arch" type="xml">
        <list>
          <field name="code"/>
          <field name="name"/>
          <field name="authority"/>
          <field name="requires_labeling"/>
          <field name="doc_required"/>
          <field name="active"/>
