      <field name="name">mx.nom.form</field>
      <field name="model">mx.nom</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="code"/>
                <field name="name"/>
                <field name="authority"/>
                <field name="requires_labeling"/>
                <field name="doc_required"/>
                <field name="active"/>
              </group>
              <group>
                <field name="valid_from"/>
                <field name="valid_to"/>
                <field name="reference_url"/>
              </group>
            </group>
            <group>
              <field name="notes"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_mx_nom_search" model="ir.ui.view">
      <field name="name">mx.nom.search</field>
      <field name="model">mx.nom</field>
      <field name="arch" type="xml">
        <search>
          <field name="code"/>
          <field name="name"/>
          <field name="authority"/>
          <filter name="active" string="Activos" domain="[('active','=',True)]"/>
        </search>
      </field>
    </record>

