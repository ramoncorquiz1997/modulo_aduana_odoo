<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="aduana_catalogo_tipo_operacion_view_list" model="ir.ui.view">
      <field name="name">aduana.catalogo.tipo_operacion.list</field>
      <field name="model">aduana.catalogo.tipo_operacion</field>
      <field name="arch" type="xml">
        <list>
          <field name="code"/>
          <field name="name"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="aduana_catalogo_regimen_view_list" model="ir.ui.view">
      <field name="name">aduana.catalogo.regimen.list</field>
      <field name="model">aduana.catalogo.regimen</field>
      <field name="arch" type="xml">
        <list>
          <field name="code"/>
          <field name="name"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="aduana_catalogo_aduana_view_list" model="ir.ui.view">
      <field name="name">aduana.catalogo.aduana.list</field>
      <field name="model">aduana.catalogo.aduana</field>
      <field name="arch" type="xml">
        <list>
          <field name="code"/>
          <field name="name"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="aduana_catalogo_clave_pedimento_view_list" model="ir.ui.view">
      <field name="name">aduana.catalogo.clave_pedimento.list</field>
      <field name="model">aduana.catalogo.clave_pedimento</field>
      <field name="arch" type="xml">
        <list>
          <field name="code"/>
          <field name="name"/>
          <field name="tipo_operacion_id"/>
          <field name="regimen_id"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="aduana_catalogo_tipo_operacion_action" model="ir.actions.act_window">
      <field name="name">Tipo operacion</field>
      <field name="res_model">aduana.catalogo.tipo_operacion</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="aduana_catalogo_regimen_action" model="ir.actions.act_window">
      <field name="name">Regimen</field>
      <field name="res_model">aduana.catalogo.regimen</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="aduana_catalogo_aduana_action" model="ir.actions.act_window">
      <field name="name">Aduanas</field>
      <field name="res_model">aduana.catalogo.aduana</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="aduana_catalogo_clave_pedimento_action" model="ir.actions.act_window">
      <field name="name">Claves pedimento</field>
      <field name="res_model">aduana.catalogo.clave_pedimento</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="aduana_catalogo_menu_root"
              name="Catalogos aduana"
              parent="mx_ped_operacion_menu_root"
              sequence="80"/>

    <menuitem id="aduana_catalogo_tipo_operacion_menu"
              name="Tipo operacion"
              parent="aduana_catalogo_menu_root"
              action="aduana_catalogo_tipo_operacion_action"
              sequence="10"/>

    <menuitem id="aduana_catalogo_regimen_menu"
              name="Regimen"
              parent="aduana_catalogo_menu_root"
              action="aduana_catalogo_regimen_action"
              sequence="20"/>

    <menuitem id="aduana_catalogo_aduana_menu"
              name="Aduanas"
              parent="aduana_catalogo_menu_root"
              action="aduana_catalogo_aduana_action"
              sequence="30"/>

    <menuitem id="aduana_catalogo_clave_pedimento_menu"
              name="Claves pedimento"
              parent="aduana_catalogo_menu_root"
              action="aduana_catalogo_clave_pedimento_action"
              sequence="40"/>

  </data>
</odoo>
