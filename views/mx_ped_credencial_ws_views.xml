<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="mx_ped_credencial_ws_view_list" model="ir.ui.view">
      <field name="name">mx.ped.credencial.ws.list</field>
      <field name="model">mx.ped.credencial.ws</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="company_id"/>
          <field name="ambiente"/>
          <field name="partner_id"/>
          <field name="is_default"/>
          <field name="ws_username"/>
          <field name="vigencia_desde"/>
          <field name="vigencia_hasta"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="mx_ped_credencial_ws_view_form" model="ir.ui.view">
      <field name="name">mx.ped.credencial.ws.form</field>
      <field name="model">mx.ped.credencial.ws</field>
      <field name="arch" type="xml">
        <form string="Credencial WS">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="company_id"/>
                <field name="ambiente"/>
                <field name="partner_id"/>
                <field name="is_default"/>
                <field name="active"/>
              </group>
              <group>
                <field name="ws_username"/>
                <field name="ws_password" password="True"/>
                <field name="vigencia_desde"/>
                <field name="vigencia_hasta"/>
              </group>
            </group>
            <group string="Certificados (opcional)">
              <field name="cert_file" filename="cert_filename"/>
              <field name="cert_filename"/>
              <field name="key_file" filename="key_filename"/>
              <field name="key_filename"/>
              <field name="key_password" password="True"/>
            </group>
            <group>
              <field name="notes"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="mx_ped_credencial_ws_action" model="ir.actions.act_window">
      <field name="name">Credenciales WS</field>
      <field name="res_model">mx.ped.credencial.ws</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('partner_id','=',False)]</field>
    </record>

    <menuitem id="mx_ped_credencial_ws_menu"
              name="Credenciales WS"
              parent="menu_mx_ped_catalogos"
              action="mx_ped_credencial_ws_action"
              sequence="46"/>

  </data>
</odoo>
