<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_mx_ped_rulepack_list" model="ir.ui.view">
    <field name="name">mx.ped.rulepack.list</field>
    <field name="model">mx.ped.rulepack</field>
    <field name="arch" type="xml">
      <list default_order="fecha_inicio desc, priority desc">
        <field name="name"/>
        <field name="code"/>
        <field name="state"/>
        <field name="fecha_inicio"/>
        <field name="fecha_fin"/>
        <field name="priority"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_mx_ped_rulepack_form" model="ir.ui.view">
    <field name="name">mx.ped.rulepack.form</field>
    <field name="model">mx.ped.rulepack</field>
    <field name="arch" type="xml">
      <form string="Rulepack normativo">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="code"/>
              <field name="state"/>
              <field name="active"/>
            </group>
            <group>
              <field name="fecha_inicio"/>
              <field name="fecha_fin"/>
              <field name="priority"/>
              <field name="weight_estructura"/>
              <field name="weight_clave"/>
              <field name="weight_condition"/>
            </group>
          </group>
          <field name="note"/>
          <notebook>
            <page string="Escenarios">
              <field name="scenario_ids">
                <list editable="bottom">
                  <field name="sequence"/>
                  <field name="code"/>
                  <field name="name"/>
                  <field name="is_default"/>
                  <field name="estructura_regla_id"/>
                  <field name="active"/>
                </list>
              </field>
            </page>
            <page string="Selectores escenario">
              <field name="selector_ids">
                <list editable="bottom">
                  <field name="sequence"/>
                  <field name="priority"/>
                  <field name="stop"/>
                  <field name="tipo_movimiento_id"/>
                  <field name="tipo_operacion"/>
                  <field name="regimen"/>
                  <field name="clave_pedimento_id"/>
                  <field name="is_virtual"/>
                  <field name="scenario_id"/>
                  <field name="active"/>
                </list>
              </field>
            </page>
            <page string="Reglas proceso">
              <field name="process_rule_ids">
                <list editable="bottom">
                  <field name="sequence"/>
                  <field name="priority"/>
                  <field name="stop"/>
                  <field name="name"/>
                  <field name="stage"/>
                  <field name="action_type"/>
                  <field name="tipo_movimiento_id"/>
                  <field name="tipo_operacion"/>
                  <field name="regimen"/>
                  <field name="clave_pedimento_id"/>
                  <field name="is_virtual"/>
                  <field name="payload_json"/>
                  <field name="active"/>
                </list>
              </field>
            </page>
            <page string="Reglas registros">
              <field name="condition_rule_ids">
                <list editable="bottom">
                  <field name="sequence"/>
                  <field name="priority"/>
                  <field name="stop"/>
                  <field name="name"/>
                  <field name="scope"/>
                  <field name="registro_tipo_id"/>
                  <field name="registro_codigo"/>
                  <field name="policy"/>
                  <field name="min_occurs"/>
                  <field name="max_occurs"/>
                  <field name="required_identifier_code"/>
                  <field name="tipo_movimiento_id"/>
                  <field name="tipo_operacion"/>
                  <field name="regimen"/>
                  <field name="clave_pedimento_id"/>
                  <field name="is_virtual"/>
                  <field name="escenario_code"/>
                  <field name="fraccion_id"/>
                  <field name="fraccion_capitulo"/>
                  <field name="active"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_mx_ped_rulepack" model="ir.actions.act_window">
    <field name="name">Rulepacks normativos</field>
    <field name="res_model">mx.ped.rulepack</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_mx_ped_rulepack"
            name="Rulepacks normativos"
            parent="menu_mx_ped_catalogos"
            action="action_mx_ped_rulepack"
            sequence="15"/>
</odoo>
