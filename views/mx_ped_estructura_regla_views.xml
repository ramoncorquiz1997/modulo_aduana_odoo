<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="mx_ped_estructura_regla_view_list" model="ir.ui.view">
      <field name="name">mx.ped.estructura.regla.list</field>
      <field name="model">mx.ped.estructura.regla</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="tipo_movimiento"/>
          <field name="tipo_operacion"/>
          <field name="regimen"/>
          <field name="clave_pedimento_id"/>
          <field name="priority"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="mx_ped_estructura_regla_view_form" model="ir.ui.view">
      <field name="name">mx.ped.estructura.regla.form</field>
      <field name="model">mx.ped.estructura.regla</field>
      <field name="arch" type="xml">
        <form string="Regla de estructura">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="active"/>
                <field name="priority"/>
              </group>
              <group>
                <field name="tipo_movimiento"/>
                <field name="tipo_operacion"/>
                <field name="regimen"/>
                <field name="clave_pedimento_id"/>
              </group>
            </group>
            <group string="Registros por incluir/validar">
              <field name="line_ids">
                <list editable="bottom">
                  <field name="sequence"/>
                  <field name="registro_codigo"/>
                  <field name="required"/>
                  <field name="min_occurs"/>
                  <field name="max_occurs"/>
                </list>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="mx_ped_estructura_regla_action" model="ir.actions.act_window">
      <field name="name">Reglas de Estructura</field>
      <field name="res_model">mx.ped.estructura.regla</field>
      <field name="view_mode">list,form</field>
      <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <menuitem id="mx_ped_estructura_regla_menu"
              name="Reglas de Estructura"
              parent="mx_ped_operacion_menu_root"
              action="mx_ped_estructura_regla_action"
              sequence="75"
              groups="base.group_system"/>

  </data>
</odoo>
