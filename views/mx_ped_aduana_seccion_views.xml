<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_mx_ped_aduana_seccion_list" model="ir.ui.view">
      <field name="name">mx.ped.aduana.seccion.list</field>
      <field name="model">mx.ped.aduana.seccion</field>
      <field name="arch" type="xml">
        <list string="Aduana-Seccion" default_order="aduana,seccion">
          <field name="aduana"/>
          <field name="seccion"/>
          <field name="code"/>
          <field name="denominacion"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="view_mx_ped_aduana_seccion_form" model="ir.ui.view">
      <field name="name">mx.ped.aduana.seccion.form</field>
      <field name="model">mx.ped.aduana.seccion</field>
      <field name="arch" type="xml">
        <form string="Aduana-Seccion">
          <sheet>
            <group>
              <group>
                <field name="aduana" placeholder="Ej. 24"/>
                <field name="seccion" placeholder="Ej. 1"/>
                <field name="code" readonly="1"/>
                <field name="active"/>
              </group>
              <group>
                <field name="denominacion" placeholder="Ej. Manzanillo, Col."/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_mx_ped_aduana_seccion" model="ir.actions.act_window">
      <field name="name">Aduana-Seccion</field>
      <field name="res_model">mx.ped.aduana.seccion</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_mx_ped_aduana_seccion"
              name="Aduana-Seccion"
              parent="menu_mx_ped_catalogos"
              action="action_mx_ped_aduana_seccion"
              sequence="20"/>

  </data>
</odoo>

