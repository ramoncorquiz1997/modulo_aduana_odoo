<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mx_ped_tipo_contenedor_list" model="ir.ui.view">
        <field name="name">mx.ped.tipo.contenedor.list</field>
        <field name="model">mx.ped.tipo.contenedor</field>
        <field name="arch" type="xml">
            <list string="Tipos de contenedor y vehiculo" default_order="code">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mx_ped_tipo_contenedor_form" model="ir.ui.view">
        <field name="name">mx.ped.tipo.contenedor.form</field>
        <field name="model">mx.ped.tipo.contenedor</field>
        <field name="arch" type="xml">
            <form string="Tipo de contenedor y vehiculo">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mx_ped_tipo_contenedor" model="ir.actions.act_window">
        <field name="name">Tipos de contenedor y vehiculo</field>
        <field name="res_model">mx.ped.tipo.contenedor</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_mx_ped_tipo_contenedor"
              name="Tipos de contenedor/vehiculo"
              parent="menu_mx_ped_catalogos"
              action="action_mx_ped_tipo_contenedor"
              sequence="60"/>

</odoo>
