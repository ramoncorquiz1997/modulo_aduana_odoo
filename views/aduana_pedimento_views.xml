<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="aduana_pedimento_view_list" model="ir.ui.view">
      <field name="name">aduana.pedimento.list</field>
      <field name="model">aduana.pedimento</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="lead_id"/>
          <field name="clave_pedimento_id"/>
          <field name="tipo_operacion_id"/>
          <field name="regimen_id"/>
          <field name="aduana_despacho_id"/>
          <field name="patente"/>
          <field name="fecha_pedimento"/>
          <field name="total_pedimento"/>
          <field name="currency_id"/>
        </list>
      </field>
    </record>

    <record id="aduana_pedimento_view_form" model="ir.ui.view">
      <field name="name">aduana.pedimento.form</field>
      <field name="model">aduana.pedimento</field>
      <field name="arch" type="xml">
        <form string="Pedimento">
          <sheet>
            <group>
              <group string="Cabecera">
                <field name="name"/>
                <field name="lead_id"/>
                <field name="fecha_pedimento"/>
                <field name="currency_id"/>
                <field name="total_pedimento"/>
              </group>
              <group string="Clasificacion">
                <field name="clave_pedimento_id"/>
                <field name="tipo_operacion_id"/>
                <field name="regimen_id"/>
                <field name="aduana_despacho_id"/>
                <field name="patente"/>
                <field name="agente_id"/>
                <field name="participante_id"/>
                <field name="rfc_importador_exportador"/>
              </group>
            </group>

            <notebook>
              <page string="Partidas">
                <field name="partida_ids" context="{'default_pedimento_id': id}">
                  <list editable="bottom">
                    <field name="sequence"/>
                    <field name="fraccion_arancelaria"/>
                    <field name="descripcion"/>
                    <field name="cantidad"/>
                    <field name="umc"/>
                    <field name="valor_unitario"/>
                    <field name="valor_aduana"/>
                  </list>
                  <form>
                    <sheet>
                      <group>
                        <field name="sequence"/>
                        <field name="fraccion_arancelaria"/>
                        <field name="descripcion"/>
                        <field name="cantidad"/>
                        <field name="umc"/>
                        <field name="valor_unitario"/>
                        <field name="valor_aduana"/>
                      </group>
                      <notebook>
                        <page string="Identificadores">
                          <field name="identificador_ids">
                            <list editable="bottom">
                              <field name="clave"/>
                              <field name="complemento1"/>
                              <field name="complemento2"/>
                              <field name="complemento3"/>
                            </list>
                          </field>
                        </page>
                        <page string="Contribuciones">
                          <field name="contribucion_ids">
                            <list editable="bottom">
                              <field name="tipo_contribucion"/>
                              <field name="tasa"/>
                              <field name="base"/>
                              <field name="importe"/>
                            </list>
                          </field>
                        </page>
                      </notebook>
                    </sheet>
                  </form>
                </field>
              </page>

              <page string="Facturas">
                <field name="factura_ids" context="{'default_pedimento_id': id}">
                  <list editable="bottom">
                    <field name="numero"/>
                    <field name="fecha"/>
                    <field name="proveedor_id"/>
                    <field name="valor"/>
                    <field name="moneda_id"/>
                  </list>
                </field>
              </page>

              <page string="Documentos">
                <field name="documento_ids" context="{'default_pedimento_id': id}">
                  <list editable="bottom">
                    <field name="tipo_doc"/>
                    <field name="folio"/>
                    <field name="fecha"/>
                    <field name="partida_id"/>
                  </list>
                </field>
              </page>

              <page string="Registros Tecnicos">
                <field name="registro_tecnico_ids" context="{'default_pedimento_id': id}">
                  <list editable="bottom">
                    <field name="registro_tipo_id"/>
                    <field name="payload"/>
                  </list>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="aduana_pedimento_action" model="ir.actions.act_window">
      <field name="name">Pedimentos</field>
      <field name="res_model">aduana.pedimento</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="aduana_pedimento_menu"
              name="Pedimentos"
              parent="mx_ped_operacion_menu_root"
              action="aduana_pedimento_action"
              sequence="5"/>

  </data>
</odoo>
